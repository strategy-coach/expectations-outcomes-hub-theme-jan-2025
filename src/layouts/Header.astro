---
import NavLink from '../layouts/NavLink.astro';

---

<header class="bg-white shadow-sm border-b px-6">
  <div class="max-w-screen-2xl mx-auto sm:px-6 lg:px-8 flex justify-between items-center sm:flex-row flex-col">
    <div class="flex items-center space-x-4">
      <button class="text-gray-500 py-4">
        <img src="/assets/images/fi-rr-menu-burger.svg" class="w-6 h-6" alt="">
      </button>
      <div class="text-lg font-bold text-gray-900  py-4"><a href="/"><img src="/assets/images/logo.png" class="mr-3 h-10" alt=""></a></div>
      <nav class="hidden lg:flex space-x-8 flex-wrap font-semibold -mb-1.5">
        <NavLink href="/" label="Home" />
        <NavLink href="/expectations" label="Expectations" />
        <NavLink href="#" label="Outcome Highlights" />
        <NavLink href="/mission-vision" label="Mission & Vision" />
        <NavLink href="/blog" label="Blog" />
      </nav>
    </div>
    <div class="flex items-center space-x-4 py-3">
      <label class="relative block ">
        <span class="sr-only">Search</span>
        <span class="absolute inset-y-0 left-0 flex items-center pl-2">
          <img src="/assets/images/fi-rr-search.svg" alt="" class="w-5 h-5">
        </span>
        <input class="placeholder:text-slate-700 block w-full border border-slate-300 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-slate-500 focus:ring-slate-500 focus:ring-1 sm:text-sm bg-slate-50 text-base text-slate-700" placeholder="Search" type="text" name="search"/>
      </label>
      <div class="relative flex items-center space-x-4">
        <button class="relative text-gray-600 hover:text-gray-900 focus:outline-none">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.118V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.118c0 .417-.162.816-.405 1.113L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
        </button>
        <span class="absolute top-[-13px] left-[-7px] bg-red-500 text-white text-xs font-bold px-2 py-0.5 rounded-full">
          3
        </span>
      </div>
      <span class="rounded-full overflow-hidden w-8 h-8"><a href="#."><img src="/assets/images/avatar-img-1.jpg" alt=""></a></span>
    </div>
  </div>
</header>
